<div class="row mt-3">
    <div class="col-6">
        <h2>Form Ubah data</h2>

        <form action="/contact?_method=PUT" method="POST">
            <input type="hidden" name="_id" value="<%= contact._id %>">
            <input type="hidden" name="oldNama" value="<%= (contact.oldNama) ? contact.oldNama : contact.nama %>">
            <div class="mb-3">
                <div class="row">
                    <div class="col">
                        <label for="nama" class="form-label">Nama</label>
                    </div>
                    <div class="col text-end text-danger">
                        <% if (typeof errors != 'undefined' && errors.find((error)=> error.param === 'nama')) { %>
                            <%= errors.find((error)=> error.param === 'nama').msg %>
                                <% } %>
                    </div>
                </div>
                <input type="text" name="nama" class="form-control" id="nama" value="<%= contact.nama %>" required>
            </div>
            <div class="mb-3">
                <div class="row">
                    <div class="col">
                        <label for="email" class="form-label">email</label>
                    </div>
                    <div class="col text-end text-danger">
                        <% if (typeof errors != 'undefined' && errors.find((error)=> error.param === 'email')) { %>
                            <%= errors.find((error)=> error.param === 'email').msg %>
                                <% } %>
                    </div>
                </div>
                <input type="email" name="email" class="form-control" id="email" value="<%= contact.email %>">
            </div>
            <div class="mb-3">
                <div class="row">
                    <div class="col">
                        <label for="noHp" class="form-label">noHp</label>
                    </div>
                    <div class="col text-end text-danger">
                        <% if (typeof errors != 'undefined' && errors.find((error)=> error.param === 'noHp')) { %>
                            <%= errors.find((error)=> error.param === 'noHp').msg %>
                                <% } %>
                    </div>
                </div>
                <input type="text" name="noHp" class="form-control" id="noHp" value="<%= contact.noHp %>">
            </div>

            <button type="submit" class="btn btn-primary">Ubah Data Contact</button>
        </form>
    </div>
</div>